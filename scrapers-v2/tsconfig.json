{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "allowJs": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
